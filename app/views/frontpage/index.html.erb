<%= render 'title' %>
<div class="onebox">
  <%= form_tag search_path(:q => nil), method: :get, class: 'onebox-form' do %>
    <div class="onebox-input-wrapper">
      <simplete-form>
        <label for="query" class="sr-only">Suche</label>
        <div class="form-control-with-icon-end">
          <%= search_field_tag 'q', nil, id: 'search', class: 'form-control',
            autofocus: true,
            autocomplete: 'off',
            placeholder: t('txt.views.frontpage.type_to_browse') %>
          <div id="loading" class="spinner-border spinner-border-sm" role="status">
            <span class="sr-only">Loading...</span>
          </div>
        </div>
      </simplete-form>
  </div>
<% end %>
</div>
